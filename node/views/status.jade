!!! 5
html
  head
    meta(name='charset', content='utf-8')
    title ET Status
    link(href='/style/calibrate.css', rel='stylesheet', type='text/css')
    script(src='/socket.io/socket.io.js')
    script(src='/script/jquery.min.js')
    script(src='/script/status.js')
  body
    img(src='/img/eriver_logo.png', margin-top='10px')
    .availability
      h1 ET Status
      - for (var i = 0; i < ets.length; i++) {
        - et = ets[i]
        - if (et.available && !et.cal && !et.paired) {
          a.etStatus.available(href="/calibrate/#{i}#", id="#{i+1}")
            .id #{et.id}
            .ip #{et.ip}
        - } else {
          a.etStatus.unavailable(href="#", id="#{i+1}")
            .id #{et.id}
            - if (et.cal) {
              .info Calibrating
            - }
            - else if (et.paired) {
              .info In use
            - }
            .ip #{et.ip}
        - }
      - }

